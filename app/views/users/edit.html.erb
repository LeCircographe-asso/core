<h1>Modifier votre profil</h1>

<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <%= f.label :email_address, "Nouvel Email" %>
    <%= f.email_field :email_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Nouveau mot de passe" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>

<hr>

<h2>Actions supplémentaires</h2>
<%= link_to "Supprimer mon compte", user_path(@user), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" }, class: "btn btn-danger" %>
<%= button_to "Se désinscrire de la newsletter", unsubscribe_user_path(@user), method: :post, class: "btn btn-secondary" %>
