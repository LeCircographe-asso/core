<% authenticated? %>

<%= %>

<% if current_user.role == "admin" || current_user.role == "godmode" || current_user.role == "volunteer" %>
  <%= link_to "Dashboard Administrateur", admin_dashboard_path %>
<% end %>

<h1>Profil</h1>

<%= link_to "Modifier email", user_path(current_user), class: "btn btn-primary" %>
<%= link_to "Modifier mot de passe", user_path(current_user), class: "btn btn-primary" %>
<%= link_to "Supprimer mon compte", user_path(current_user), class: "btn btn-primary" %>
<%= button_to "Se désinscrire de la newsletter", unsubscribe_user_path(@user), method: :post, class: "btn btn-primary" %>

<% @public_attributes.each do |attr_name, attr_value|%>
<p>
    <%= attr_name%> :
    <%
        if attr_value == true 
          mot = "Oui" 
        elsif attr_value == false
          mot = "Non"
        elsif attr_value == nil
          mot = "Non précisé"
        else
          mot = attr_value
        end
    %>
    <%= mot%>
</p>

<%end%>



