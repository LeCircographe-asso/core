<% content_for :title, "Users" %>
<div class="admin-dashboard">
  <h1 class="dashboard-title">Tableau de bord administrateur</h1>

  <div class="dashboard-stats">
    <p><strong>Nombre d'utilisateurs :</strong> <%= @users.count %></p>
  </div>

  <div class="dashboard-actions">
    <%= link_to "Modifier les horaires", edit_opening_hours_path, class: "btn btn-primary" %>
  </div>

  <h2 class="dashboard-subtitle">Liste des utilisateurs</h2>
  <%= link_to "New user", new_admin_user_path %>
  <table class="dashboard-table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>RÃ´le</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email_address %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to "voir", admin_user_path(user), class: "btn btn-primary", data: { turbo: false } %>
