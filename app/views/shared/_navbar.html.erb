<div class="navbar">
  <div class="navbar-left">
    <div class="navbar-logo">
      <%= link_to root_path do %>
        <%= image_tag "Le-Circographe_logo_transparent.png", alt: "Logo Circographe" %>
      <% end %>
    </div>
  </div>
  <div class="navbar-center">
    <ul class="navbar-links">
      <li><%= link_to "Accueil", root_path, class: "navbar-link" %></li>
      <li><%= link_to "Le cirque", le_cirque_path, class: "navbar-link" %></li>
      <li><%= link_to "Le graff", le_graff_path, class: "navbar-link" %></li>
      <li><%= link_to "Le lieu", le_lieu_path, class: "navbar-link" %></li>
      <li><%= link_to "À propos", about_path, class: "navbar-link" %></li>
    </ul>
  </div>
  <div class="navbar-right">
    <% if authenticated? %>
      <%= link_to "Mon profil", user_path(current_user), class: "white-button" %>
      <%= button_to "Se déconnecter", session_path, method: :delete, class: "blue-button" %>
    <% else %>
      <%= link_to "Se connecter", new_session_path, class: "white-button" %>
      <%= link_to "S'inscrire", new_registration_path, class: "blue-button" %>
    <% end %>
  </div>
</div>
